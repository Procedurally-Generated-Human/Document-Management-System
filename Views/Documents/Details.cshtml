@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@model DemoDMS.Models.Document

@{
    ViewData["Title"] = Localizer["Details"];
}

<h1>@Localizer["Details"]</h1>

<div>
    <h4>@Localizer["Document"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Name)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.AuthorName)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.SupervisorName)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SupervisorName)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Level)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Department)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Faculty)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Faculty)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.PublicationDate)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Extension)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Extension)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.UploadDate)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UploadDate)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.ModifiedDate)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.Size)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.FilePath)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilePath)
        </dd>

        <dt class = "col-sm-2">
            @Localizer[Html.DisplayNameFor(model => model.FileType)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FileType)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Download" asp-route-id="@Model?.Id"><button type="button" class="btn btn-success">@Localizer["Download"] <i class="fas fa-download"></i></button></a> 
    <a asp-action="Edit" asp-route-id="@Model?.Id"><button type="button" class="btn btn-primary">@Localizer["Edit"] <i class="fas fa-edit"></i></button></a> 
    <a asp-action="Index"><button type="button" class="btn btn-secondary">@Localizer["Return"] <i class="fas fa-undo"></i></button></a>
</div>
